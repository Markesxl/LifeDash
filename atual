<script>
// CONFIG FIREBASE
const firebaseConfig = {
  apiKey: "AIzaSyBkSJDH_aEVsp-LSNGm4XBqWoo_FUIJYNo",
  authDomain: "life-dash-e33f2.firebaseapp.com",
  projectId: "life-dash-e33f2",
  storageBucket: "life-dash-e33f2.firebasestorage.app",
  messagingSenderId: "270639106877",
  appId: "1:270639106877:web:92c8ec9353c6bacb485354"
};

firebase.initializeApp(firebaseConfig);
const db = firebase.firestore();
const auth = firebase.auth();

let usuarioAtivo = null;
const INICIAL = { perfil: {nome: "", idade: "", sexo: "", profissao: "", frase: "", foto: ""}, categorias: [], tarefas: [], habitos: [], hist: [], xp: 0, badges_unlocked: [] };
let S = JSON.parse(JSON.stringify(INICIAL));
let charts = {};
let openCats = {};
let tempFoto = "";
const hColors = ['#38bdf8', '#fbbf24', '#22c55e', '#f472b6', '#818cf8', '#fb7185', '#a78bfa'];

const BADGES = [
  {id:'1', icon:'ü¶â', title:'Coruja', req:(s)=>s.hist.filter(h=>h.tipo==='T' && parseInt(h.hora)>=20).length>=5},
  {id:'2', icon:'üöÄ', title:'Decolagem', req:(s)=>xpInfo(s.xp).n>=2},
  {id:'3', icon:'üî•', title:'Em Chamas', req:(s)=>s.habitos.some(h=>h.total>=7)},
  {id:'4', icon:'üß©', title:'Estrategista', req:(s)=>s.categorias.length>=5},
  {id:'5', icon:'üíé', title:'Rel√≠quia', req:(s)=>s.xp>=1000},
  {id:'6', icon:'üëë', title:'Lenda', req:(s)=>xpInfo(s.xp).n>=10}
];

function fazerLogin() {
  const email = document.getElementById('email').value;
  const pass = document.getElementById('password').value;
  auth.signInWithEmailAndPassword(email, pass).catch(err => {
    if(err.code === 'auth/user-not-found') return auth.createUserWithEmailAndPassword(email, pass);
    document.getElementById('login-status').innerText = "Erro: " + err.message;
  });
}
function fazerLogout() { auth.signOut().then(() => location.reload()); }

auth.onAuthStateChanged(user => {
  if(user) {
    usuarioAtivo = user;
    document.getElementById('login-screen').style.display = 'none';
    db.collection("users").doc(user.uid).onSnapshot(doc => {
      if(doc.exists) {
        const data = doc.data();
        if(JSON.stringify(data) !== JSON.stringify(S)) {
          S = data; render(); sincronizarInputsPerfil();
        }
      } else { salvar(); }
    });
  } else { document.getElementById('login-screen').style.display = 'flex'; }
});

function salvar() {
  checkBadges();
  if(usuarioAtivo) {
    db.collection("users").doc(usuarioAtivo.uid).set(Object.assign({}, S));
  }
  render();
}

function localPreview(input) { 
  if(input.files && input.files[0]){ 
    const reader = new FileReader();
    reader.onload = (e) => {
      const img = new Image();
      img.onload = () => {
        const canvas = document.createElement('canvas');
        const MAX_WIDTH = 300; 
        const scaleSize = MAX_WIDTH / img.width;
        canvas.width = MAX_WIDTH;
        canvas.height = img.height * scaleSize;
        const ctx = canvas.getContext('2d');
        ctx.drawImage(img, 0, 0, canvas.width, canvas.height);
        tempFoto = canvas.toDataURL('image/jpeg', 0.7);
        document.getElementById("pPreview").src = tempFoto;
      };
      img.src = e.target.result;
    };
    reader.readAsDataURL(input.files[0]);
  } 
}

function salvarPerfilFirebase() {
  S.perfil.nome = document.getElementById("pNome").value;
  S.perfil.idade = document.getElementById("pIdade").value;
  S.perfil.profissao = document.getElementById("pNome").value; // Corre√ß√£o: pProfissao id faltante no anterior, usando input correto
  S.perfil.sexo = document.getElementById("pSexo").value;
  S.perfil.frase = document.getElementById("pFrase").value;
  if(tempFoto) S.perfil.foto = tempFoto;
  salvar(); popup("Perfil sincronizado!");
}

function checkBadges() {
  BADGES.forEach(b => {
    if (!S.badges_unlocked.includes(b.id) && b.req(S)) {
      S.badges_unlocked.push(b.id); S.xp += 100;
      popup(`üèÜ CONQUISTA: ${b.title}!`);
    }
  });
}

function render() {
  const l = xpInfo(S.xp); const hoje = new Date().toLocaleDateString();
  document.getElementById("hNome").innerText = S.perfil.nome || "---";
  document.getElementById("hIdade").innerText = S.perfil.idade || "--";
  document.getElementById("hSexo").innerText = S.perfil.sexo || "---";
  document.getElementById("hProfissao").innerText = S.perfil.profissao || "---";
  document.getElementById("hFrase").innerText = S.perfil.frase ? `"${S.perfil.frase}"` : "---";
  document.getElementById("hNivel").innerText = l.n;
  document.getElementById("xpNumerico").innerText = `${Math.floor(l.cur)}/${Math.floor(l.max)} XP`;
  document.getElementById("xpBar").style.width = l.p + "%";
  document.getElementById("hFoto").src = S.perfil.foto || "https://via.placeholder.com/85";

  let hBadge = ""; let mBadge = "";
  BADGES.forEach(b => {
    const ok = S.badges_unlocked.includes(b.id);
    if(ok) hBadge += `<div class="badge-mini">${b.icon}</div>`;
    mBadge += `<div style="background:#0f172a; padding:15px; border-radius:12px; text-align:center; border:1px solid ${ok?'var(--gold)':'#1e293b'}; opacity:${ok?1:0.3};"><span style="font-size:30px">${b.icon}</span><h4 style="font-size:12px;margin:5px 0">${b.title}</h4></div>`;
  });
  document.getElementById("homeBadges").innerHTML = hBadge;
  document.getElementById("muralConquistas").innerHTML = mBadge;

  document.getElementById("homeHabitos").innerHTML = S.habitos.map((h,i) => `<div class="item"><span>${h.nome}</span><button onclick="concluirHabito(${i})" style="color:var(--success); background:none; border:none; cursor:pointer" ${h.ultimaConclusao===hoje?'disabled':''}>${h.ultimaConclusao===hoje?'‚è≥':'‚úî'}</button></div>`).join("");
  
  let tarHtml = "";
  S.categorias.forEach(cat => {
    const ts = S.tarefas.filter(t=>t.cat===cat);
    tarHtml += `<div class="cat-header" onclick="toggleCat('${cat}')"><span>${cat}</span></div><div class="task-list ${openCats[cat]?'open':''}">` +
    ts.map(t => `<div class="item"><span>${t.nome}</span><select onchange="alterarStatusTarefa(${S.tarefas.indexOf(t)}, this.value)" style="width:auto; padding:4px;"><option value="pendente" ${t.status==='pendente'?'selected':''}>Pendente</option><option value="concluido" ${t.status==='concluido'?'selected':''}>Feito</option></select></div>`).join("") + `</div>`;
  });
  document.getElementById("homeTarefas").innerHTML = tarHtml;

  document.getElementById("listCats").innerHTML = S.categorias.map((c,i)=>`<div class="item">${c}<button onclick="S.categorias.splice(${i},1);salvar()" style="color:var(--danger);border:none;background:none;cursor:pointer">‚úñ</button></div>`).join("");
  document.getElementById("listTars").innerHTML = S.tarefas.map((t,i)=>`<div class="item">${t.nome} <small>(${t.cat})</small><button onclick="S.tarefas.splice(${i},1);salvar()" style="color:var(--danger);border:none;background:none;cursor:pointer">‚úñ</button></div>`).join("");
  document.getElementById("listHabs").innerHTML = S.habitos.map((h,i)=>`<div class="item">${h.nome}<button onclick="S.habitos.splice(${i},1);salvar()" style="color:var(--danger);border:none;background:none;cursor:pointer">‚úñ</button></div>`).join("");
  document.getElementById("listHist").innerHTML = S.hist.slice().reverse().map(h=>`<div class="item"><span>${h.nome}</span><small>${h.data}</small></div>`).join("");
  document.getElementById("regTarCat").innerHTML = S.categorias.map(c=>`<option value="${c}">${c}</option>`).join("");
  
  if(document.getElementById('chartsContainer').style.display === 'grid') initCharts();
}

function sincronizarInputsPerfil() {
  document.getElementById("pNome").value = S.perfil.nome || "";
  document.getElementById("pIdade").value = S.perfil.idade || "";
  document.getElementById("pProfissao") ? document.getElementById("pProfissao").value = S.perfil.profissao || "" : null;
  document.getElementById("pSexo").value = S.perfil.sexo || "";
  document.getElementById("pFrase").value = S.perfil.frase || "";
  document.getElementById("pPreview").src = S.perfil.foto || "https://via.placeholder.com/150";
}

function concluirHabito(i) {
  S.habitos[i].total++; S.habitos[i].ultimaConclusao = new Date().toLocaleDateString();
  S.xp+=15; S.hist.push({nome:S.habitos[i].nome, data:new Date().toLocaleDateString(), tipo:'H', cat:'H√°bito', hora:new Date().getHours()}); 
  salvar(); popup("+15 XP!");
}

function alterarStatusTarefa(idx, st) {
  if(st==='concluido') { 
    S.xp+=10; S.hist.push({nome:S.tarefas[idx].nome, data:new Date().toLocaleDateString(), tipo:'T', cat:S.tarefas[idx].cat, hora:new Date().getHours()}); 
    popup("+10 XP!");
  }
  S.tarefas[idx].status = st; salvar();
}

function resetDia() { if(confirm("Resetar Hoje?")){ const h=new Date().toLocaleDateString(); S.hist=S.hist.filter(x=>x.data!==h); S.tarefas.forEach(t=>t.status='pendente'); S.habitos.forEach(x=>{if(x.ultimaConclusao===h){x.ultimaConclusao=""; x.total--;}}); salvar(); } }
function resetGeral() { if(confirm("AVISO: Apagar todos os dados do banco de dados?")){ S = JSON.parse(JSON.stringify(INICIAL)); salvar(); } }

function addCat() { const i=document.getElementById("regCatNome"); if(i.value){ S.categorias.push(i.value); i.value=""; salvar(); } }
function addHab() { const i=document.getElementById("regHabNome"); if(i.value){ S.habitos.push({nome:i.value, total:0, ultimaConclusao:""}); i.value=""; salvar(); } }
function addTar() { const n=document.getElementById("regTarNome"), c=document.getElementById("regTarCat"); if(n.value && c.value){ S.tarefas.push({nome:n.value, cat:c.value, status:'pendente'}); n.value=""; salvar(); } }
function toggleCat(cat) { openCats[cat] = !openCats[cat]; render(); }
function nav(id, btn) { document.querySelectorAll(".section").forEach(s=>s.classList.remove("active")); document.getElementById(id).classList.add("active"); document.querySelectorAll(".nav button").forEach(b=>b.classList.remove("active")); btn.classList.add("active"); }
function toggleCharts() { const c = document.getElementById('chartsContainer'); c.style.display = c.style.display === 'none' ? 'grid' : 'none'; if(c.style.display==='grid') initCharts(); }
function popup(m){ const p=document.getElementById("popup"); p.innerText=m; p.style.display="block"; setTimeout(()=>p.style.display="none",3000); }
function xpInfo(xp) { let n=1, ac=0, pr=100; while(xp>=pr){ n++; ac=pr; pr+=Math.floor(150*Math.pow(1.2,n-1)); } return {n, p:((xp-ac)/(pr-ac))*100, cur:xp-ac, max:pr-ac}; }

function initCharts() {
  const ctxP = document.getElementById('chartPizza')?.getContext('2d');
  const ctxB = document.getElementById('chartBarras')?.getContext('2d');
  const ctxH = document.getElementById('chartHabitos')?.getContext('2d');
  if(!ctxP) return;

  const dias = [...Array(7)].map((_, i) => { const d = new Date(); d.setDate(d.getDate()-i); return d.toLocaleDateString(); }).reverse();
  const cats = {}; S.hist.forEach(h => { if(h.cat) cats[h.cat] = (cats[h.cat]||0)+1; });

  if(charts.p) charts.p.destroy();
  charts.p = new Chart(ctxP, { type:'pie', data:{labels:Object.keys(cats), datasets:[{data:Object.values(cats), backgroundColor:hColors}]}, options:{maintainAspectRatio:false, plugins:{legend:{display:false}}}});

  const barrasData = dias.map(d=>S.hist.filter(h=>h.data===d).length);
  if(charts.b) charts.b.destroy();
  charts.b = new Chart(ctxB, { type:'bar', data:{labels:dias.map(d=>d.split('/')[0]), datasets:[{label:'A√ß√µes', data:barrasData, backgroundColor:'#38bdf8'}]}, options:{maintainAspectRatio:false, plugins:{legend:{display:false}}}});

  // NOVO GR√ÅFICO DE LINHAS BASEADO NA IMAGEM
  const hDs = S.habitos.map((h, i) => {
    let acc = 0; 
    return { 
      label: h.nome, 
      data: dias.map(d => { if(S.hist.find(x => x.nome === h.nome && x.data === d)) acc++; return acc; }), 
      borderColor: hColors[i % hColors.length],
      backgroundColor: hColors[i % hColors.length], 
      borderWidth: 2,
      tension: 0, // Linhas retas como na imagem
      pointStyle: 'circle',
      pointRadius: 5,
      pointBackgroundColor: hColors[i % hColors.length]
    };
  });

  if(charts.h) charts.h.destroy();
  charts.h = new Chart(ctxH, { 
    type:'line', 
    data:{labels:dias.map(d => d.split('/')[0]), datasets:hDs}, 
    options:{
      maintainAspectRatio:false, 
      plugins:{
        legend:{ 
          display:true, 
          position: 'bottom', // Legenda embaixo como na imagem
          labels:{ color:'#e5e7eb', font:{size:10}, usePointStyle: true, boxWidth: 6 } 
        } 
      },
      scales: {
        y: { 
          stacked: true, // Empilhado horizontalmente conforme solicitado
          beginAtZero: true, 
          grid:{color:'#1e293b'}, 
          ticks:{color:'#94a3b8'} 
        },
        x: { 
          grid:{color:'#1e293b'}, 
          ticks:{color:'#94a3b8'} 
        }
      }
    }
  });
}
</script>
</body>
</html>
